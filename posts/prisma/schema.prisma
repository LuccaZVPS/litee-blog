generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String     @id @default(uuid())
  title     String
  content   String     @db.VarChar(15000)
  accountId String
  imagePath   String
  imageName   String
  categories Category[]
}
model Category {
  id        String     @id @default(uuid())
  title     String
  posts Post[]
}